# NASA TEMPO Satellite Data (Required)
NASA_BEARER_TOKEN=your_nasa_earthdata_token

# Ground Station APIs (Required)
EPA_AIRNOW_API_KEY=your_epa_airnow_key
WAQI_API_KEY=your_waqi_api_key
NASA_FIRMS_API_KEY=your_nasa_firms_key

# AWS Configuration (Auto-configured on EC2)
AWS_DEFAULT_REGION=us-east-1

# S3 Configuration for TEMPO Files
TEMPO_S3_BUCKET=your-tempo-bucket-name
TEMPO_DOWNLOAD_INTERVAL=3600  # 1 hour in seconds

# Database Configuration
DB_HOST=your-rds-endpoint.amazonaws.com
DB_USER=admin
DB_PASSWORD=your-secure-password
DB_NAME=safer_skies
DB_PORT=3306

DATABASE_URL=mysql://admin:password@your-rds-endpoint:3306/safer_skies

# Application Configuration
FLASK_ENV=production
DEBUG=false
API_BASE_URL=http://your-ec2-ip:8000
CORS_ORIGINS=*

# Cache Configuration (Redis for better performance)
CACHE_TYPE=redis
REDIS_URL=redis://localhost:6379/0

# Processing Configuration
PROCESS_TEMPO_FILES=true
TEMPO_PROCESSING_SCHEDULE="0 * * * *"  # Every hour

# Performance Settings
CACHE_TIMEOUT=3600
MAX_REQUESTS_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
